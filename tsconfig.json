{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "commonjs", // 用于指定模块的代码生成规则，可以使用 commonjs 、 amd 、 umd 、 system 、 es6 、 es2015 、 none 这些选项
    "declaration": true, // 是否需要生成定义文件d.ts，设置为true，则生成
    "removeComments": true, // 用于指定是否需要输出注释，设置为true，则不输出注释
    "experimentalDecorators": true, // 设置为true，则支持ES7的装饰器特性
    "emitDecoratorMetadata": true, // 设置为true，则使用元数据特性
    "allowSyntheticDefaultImports": true, // 设置为true时，则允许从没有默认导出的模块中默认导入(也就是不做检查)。
    "esModuleInterop": true, // 开启esModuleInterop后会默认开启allowSyntheticDefaultImports选项
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "files": ["types/express.d.ts"]
}
